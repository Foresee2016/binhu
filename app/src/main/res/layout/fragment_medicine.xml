<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgMain"
    android:paddingTop="24dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/bgMain"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_menu"
        app:subtitleTextColor="#ffffff"
        app:title="@string/app_name"
        app:titleTextColor="#ffffff" />


    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        android:id="@+id/view_pager"
        android:background="@color/bgContent"
        android:visibility="gone">
        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:id="@+id/tab_layout"
            app:tabIndicatorColor="@color/fgNav"
            app:tabIndicatorHeight="3dp"
            app:tabTextColor="@color/tab_text_normal"
            android:background="@color/bgTab"
            app:tabSelectedTextColor="@color/tab_text_selected">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medicine_tab_all" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medicine_tab_five_flavors" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medicine_tab_four_natures" />
        </android.support.design.widget.TabLayout>

    </android.support.v4.view.ViewPager>
    <!--app:layout_constraintBottom_toTopOf="@id/nav_bottom" -->
